# Avant Window Navigator configuration schema
# -------------------------------------------
# schema metadata
[DEFAULT]
single_instance = false

# configuration options
[panel/panel_mode]
type = boolean
default = false
description = If true, maximised windows will not cover the panel.

[panel/expand]
type = boolean
default = false
description = If true, the panel will expand to full monitor width/height.

[panel/orient]
type = integer
default = 2
description = Orientation of Awn. (top=0, right=1, bottom=2 and left=3)

[panel/offset]
type = integer
default = 0
description = Offset of the icons from window border.

[panel/size]
type = integer
default = 48
description = The user-visible size of Awn.

[panel/applet_list]
type = list-string
default = @APPLETDATADIR@/taskmanager.desktop::1
description = The list of applets for this panel ordered from ltr or ttb.

[panel/monitor_force]
type = boolean
default = false
description = Force monitor geometry.

[panel/monitor_width]
type = integer
default = 1024
description = The forced monitor width. Only used if monitor_force is true.

[panel/monitor_height]
type = integer
default = 768
description = The forced monitor height. Only used if monitor_force is true.

[panel/monitor_offset]
type = integer
default = 0
description = An optional offset when you have more than 1 monitors.

[panel/monitor_align]
type = float
default = 0.5
description = Alignment of a non-expanded panel on the monitor edge.

[panel/autohide]
type = integer
default = 0
description = Auto hides the dock when the cursor is not on the dock (shouldn't be used together with panel_mode). (none=0, keep below=1, fade out=2, see through=3)

[panel/style]
type = integer
default = 1
description = The style of the bar. (none=0, flat bar=1, 3d bar=2, curved bar=3)

[panel/clickthrough]
type = integer
default = 1
description = Provides possibility to click on windows behind the panel. (0 - never click through, 1 - click through when holding CTRL, 2 - always click through and interact with panel only when holding CTRL)

[panels/panel_list]
type = list-string
default = 1
description = The list of panels.

[panel/behavior]
type = integer
default = 5
description = Behavior of the bar, handle by awn-settings (0=Standart, 1=Panel mode, 2=Autohide Keep below, 3=Autohide Fade out",4=Transparency, 5=Custom)

[theme/gstep1]
type = color
default = #454545C8
description = First gradient step color.

[theme/gstep2]
type = color
default = #010101BE
description = Second gradient step color.

[theme/ghistep1]
type = color
default = #FFFFFF0B
description = First highlight gradient step color.

[theme/ghistep2]
type = color
default = #FFFFFF0A
description = Second highlight gradient step color.

[theme/icon_text_color]
type = string
default =
description = Icon text color.  Leave empty to use gtk theme color.

[theme/icon_text_outline_color]
type = string
default =
description = Icon text outline color.  Leave empty to use gtk theme color.

[theme/icon_font_mode]
type = integer
default = 0
description = 0 - solid, 1 - outline, 2 - outline, reversed.

[theme/icon_text_outline_width]
type = float
default = 2.5
description = width of icon text outline if outline mode is enabled.  Suggested values 1.0 - 5.0.

[theme/border]
type = color
default = #000000CC
description = Main border color.

[theme/hilight]
type = color
default = #FFFFFF11
description = Internal border color.

[theme/show_sep]
type = boolean
default = true
description = Draw separators.

[theme/sep_color]
type = color
default = #FFFFFF00
description = Separator color.

[theme/draw_pattern]
type = boolean
default = false
description = Enable drawing of a pattern.

[theme/pattern_alpha]
type = float
default = 0.5
description = The opacity of the pattern.

[theme/pattern_filename]
type = string
default = None
description = The location of the pattern to draw.

[theme/gtk_theme_mode]
type = boolean
default = true
description = Whether to use colors from the current Gtk theme.

[theme/corner_radius]
type = float
default = 10.0
description = Anything greater than 0 will draw a panel with corners. The greater the radius, the larger the corners.

[theme/panel_angle]
type = float
default = 45.0
description = The angle of the panel in 3D mode.

[theme/curviness]
type = float
default = 10.0
description = The curviness of the panel in Curves mode.

[theme/curves_symmetry]
type = float
default = 0.5
description = The symmetry of the curve in Curves mode.

[theme/tooltip_font_name]
type = string
default = Sans 8
description = Font name of the tooltip

[theme/tooltip_font_color]
type = string
default = #FFFFFFFF
description = Font color of the tooltip

[theme/tooltip_bg_color]
type = string
default = #000000B3
description = Background color of the tooltip

[theme/current_theme]
type = string
default = @PKGDATADIR@/themes/awn-default.desktop
description = Path to the current desktop file theme.

[effects/reflection_offset]
type = integer
default = 0
description = The offset between the icon and it's reflection

[effects/icon_effect]
type = integer
default = 0
description = A bitmask which stores the type of effect for each event

[effects/icon_alpha]
type = float
default = 1.0
description = The opacity of the icons, from 0.0 to 1.0

[effects/reflection_alpha_multiplier]
type = float
default = 0.3
description = Reflection alpha as a multiple of the current alpha of the icon.

[effects/show_shadows]
type = boolean
default = false
description = Show shadows for icons.

[effects/arrow_icon]
type = string
default = __awn_internal_arrow1
description = Path to the png containing the arrow icon.

[shared/dialog_focus_loss_behavior]
type = boolean
default = true
description = Whether to close dialogs on loss of focus.

[shared/allow_generic_config_edit]
type = boolean
default = false
description = Determines if generic configuration editor is allowed for applets that do not have a customized preferences dialog.

