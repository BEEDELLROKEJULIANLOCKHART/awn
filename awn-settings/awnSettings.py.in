                new_active = 2
            elif behaviour == (False, 2, 0):
                new_active = 3
            elif behaviour == (False, 3, 0):
                new_active = 4

            if (self.choose_behavior.get_active() != new_active):
                self.choose_behavior.set_active(new_active)

