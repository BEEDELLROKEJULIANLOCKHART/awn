                if self.clickthrough != 0: self.clickthrough = 0
                self.autohide_type = 1
            elif widget.get_active() == 3:
                if self.panel_mode: self.panel_mode = False
                if self.clickthrough != 0: self.clickthrough = 0
                self.autohide_type = 2
            elif widget.get_active() == 4:
